<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    tools:context=".ui.LogInActivity">

    <TextView
        android:id="@+id/logintextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="З поверненням!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/logintextView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:text="Введіть пошту та пароль для входу"
        android:textSize="16sp"
        android:textColor="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Електронна пошта"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/logInEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/blue"
        app:hintEnabled="false"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="example@mail.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:backgroundTint="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Пароль"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LoginPasswordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/blue"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="********"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:backgroundTint="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Забули пароль?"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="14sp"
            android:onClick="forgot" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_signin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Увійти"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/blue"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/logintextView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Немає аккаунту? "
            android:textSize="15sp"
            android:textColor="@color/gray" />
        <TextView
            android:id="@+id/logintextView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Створити"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:padding="8dp"
            android:onClick="signup" />
    </LinearLayout>

</LinearLayout>